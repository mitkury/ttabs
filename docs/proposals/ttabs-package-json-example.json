{
  "name": "ttabs-svelte",
  "version": "0.1.0",
  "description": "A flexible layout management system with draggable, resizable tiles and tabs for Svelte applications",
  "type": "module",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./themes": {
      "types": "./dist/themes/index.d.ts",
      "import": "./dist/themes/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package && publint",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,svelte",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "preversion": "npm run typecheck && npm run lint && npm test",
    "version": "git add -A",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run build",
    "postpublish": "npm run clean"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "tabs",
    "tiles",
    "layout",
    "ui",
    "interface",
    "panel",
    "grid",
    "resizable",
    "draggable",
    "open-source"
  ],
  "author": "Dmitry Kury (d@dkury.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitkury/ttabs.git"
  },
  "bugs": {
    "url": "https://github.com/mitkury/ttabs/issues"
  },
  "homepage": "https://github.com/mitkury/ttabs#readme",
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-svelte": "^2.0.0",
    "publint": "^0.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^6.2.5",
    "vitest": "^1.0.0"
  }
} 